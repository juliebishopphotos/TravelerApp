@model TravelerApp.Models.TripDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>TripDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TripId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TripId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>
    </dl>
</div>


<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Restaurants</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Eats)
            {
                <tr>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>



<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Attractions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sees)
            {
                <tr>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div>
    <table class="table table-bordered">
       <thead>
           <tr>
            <th>Lodging</th>
           </tr>
       </thead>
       <tbody>
           @foreach (var item in Model.Stays)
           {
               <tr>
                   <td>@item.Name</td>
               </tr>
           }
       </tbody>
     </table>
</div>


    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.TripId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
