@model TravelerApp.Models.TripDetail

@{
    ViewBag.Title = "Details";
}

<h1 class="text-uppercase text-center">Trip Details</h1>


    <hr />
<div class="well details-form">
    <dl class="dl-horizontal" style="width:370px; margin:0 auto;">
        <dt>
            @Html.DisplayNameFor(model => model.TripId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TripId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>
    </dl>
</div>



<div class="center">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Restaurants</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Eats)
            {
                <tr>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>



    <div class="center">
        <table class="table table-bordered">
            <thead class="thead-dark text-white">
                <tr>
                    <th>Attractions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Sees)
                {
                    <tr>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div class="center">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Lodging</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Stays)
                {
                    <tr>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.TripId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
